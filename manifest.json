{
  "manifest_version": 3,
  "name": "ADK URL Parameters Manager",
  "description": "Add and manage URL parameters across all pages",
  "version": "1.1",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "incognito": "spanning"
}
